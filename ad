[32m+[m	[32mif (!clickBuffer.loadFromFile("../Sounds/" + click_))[m
[32m+[m		[32mexit(-1);[m
[32m+[m	[32mclickSound.setBuffer(clickBuffer);[m
[32m+[m	[32mclickSound.setVolume(100);[m
[32m+[m[32m}[m
[32m+[m
